<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".passenger_register"
    android:orientation="vertical"
    android:background="#ffffff"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_margin="20dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/email2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="#ffc107"
            android:hint="Email id"
            android:layout_margin="20dp"

            />

        <EditText
            android:id="@+id/password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="#ffc107"
            android:hint="Password"
            android:layout_margin="20dp"
            android:inputType="textPassword"

            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="#ffc107"
            android:hint="Confirm Password"
            android:layout_margin="20dp"
            android:inputType="textPassword"
            />

        <EditText
            android:id="@+id/busno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="#ffc107"
            android:hint="Bus Number"
            android:layout_margin="20dp"

            />


        <EditText
            android:id="@+id/licenseno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="#ffc107"
            android:hint="License Number"
            android:layout_margin="20dp"

            />

        <EditText
            android:id="@+id/billbook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="#ffc107"
            android:hint="Bill Book Number"
            android:layout_margin="20dp"

            />


        <EditText
            android:id="@+id/billbookh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="#ffc107"
            android:hint="Bill book holder"
            android:layout_margin="20dp"

            />

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="50dp"
            android:background="#2E3035"
            />
    </LinearLayout>
    </ScrollView>

</LinearLayout>